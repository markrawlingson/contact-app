@page
@model RegisterModel
@{
    ViewData["Title"] = "Create a new account";
}

<div class="flex justify-center items-center">
    <div class="mx-auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-full max-w-lg">
            <h2 class="text-4xl font-extrabold tracking-tight leading-none border-b pb-2 mb-4">@ViewData["Title"]</h2>
            
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
            <div class="flex flex-wrap -mx-3">
                <div class="w-full md:w-1/2 px-3 mb-2">
                    <label class="block uppercase tracking-wide leading-none text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                        First Name
                    </label>
                    <input 
                        asp-for="Input.FirstName"
                        id="grid-first-name"
                        type="text"
                        aria-required="true"
                        class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white">
                    <span asp-validation-for="Input.FirstName" class="text-red-500"></span>
                </div>
                <div class="w-full md:w-1/2 px-3 mb-4">
                    <label class="block uppercase tracking-wide leading-none text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
                        Last Name
                    </label>
                    <input 
                        asp-for="Input.LastName"
                        id="grid-last-name" 
                        type="text"
                        aria-required="true"
                        class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                    <span asp-validation-for="Input.LastName" class="text-red-500"></span>
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-4">
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide leading-none text-gray-700 text-xs font-bold mb-2" for="grid-email">
                        Email Address
                    </label>
                    <input asp-for="Input.Email"
                           aria-required="true"
                           autocomplete="username"
                           id="grid-email"
                           type="email"
                           class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-4">
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide leading-none text-gray-700 text-xs font-bold mb-2" for="grid-password">
                        Password
                    </label>
                    <input asp-for="Input.Password"
                           aria-required="true"
                           autocomplete="password"
                           id="grid-password"
                           type="password"
                           class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                    <span asp-validation-for="Input.Password" class="text-red-500"></span>
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-4">
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide leading-none text-gray-700 text-xs font-bold mb-2" for="grid-confirm-password">
                        Confirm Password
                    </label>
                    <input asp-for="Input.ConfirmPassword"
                           aria-required="true"
                           autocomplete="password"
                           id="grid-confirm-password"
                           type="password"
                           class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 px-3">
                <button id="registerSubmit" type="submit" class="w-full bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
