@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="flex justify-center items-center">
    <div class="w-full max-w-md">
        <div class="text-4xl font-extrabold tracking-tight leading-none pb-4 text-center border-b pb-2 mb-4">@ViewData["Title"]</div>
        <section>
            <form id="account" method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="w-full px-3 mb-2">
                    <label class="block uppercase tracking-wide leading-none text-gray-700 text-xs font-bold mb-2" for="grid-email">
                        Email Address
                    </label>
                    <input asp-for="Input.Email"
                           id="grid-email"
                           type="text"
                           aria-required="true"
                           class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white">
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>
                </div>
                <div class="w-full px-3 mb-2">
                    <label class="block uppercase tracking-wide leading-none text-gray-700 text-xs font-bold mb-2" for="grid-password">
                        Password
                    </label>
                    <input asp-for="Input.Password"
                           id="grid-password"
                           type="text"
                           aria-required="true"
                           class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white">
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>
                </div>
                <div class="px-3 mb-2">
                    <div class="flex items-center mb-4">
                        <input class="form-checkbox h-4 w-4 text-blue-600" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="ml-2 text-gray-700">Remember Me</label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-full btn btn-lg bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded">Log in</button>
                    </div>
                </div>
                <div class="text-center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-blue-500 hover:underline">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-blue-500 hover:underline">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-blue-500 hover:underline">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}